<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.doyle.Fragment.F5Fragment">

    <!-- TODO: Update blank fragment layout -->
        <LinearLayout
            android:background="@color/hui"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="25dp"
                android:gravity="center_horizontal|center_vertical"
                android:textColor="@color/colorWhite"
                android:background="#FFC125"
                android:text="个人中心"/>
            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@color/colorWhite"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="20dp">
                    <ImageView
                        android:id="@+id/touxiang"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@drawable/touxiang"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="40dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:orientation="vertical">
                    <TextView
                        android:gravity="center_vertical"
                        android:textSize="20dp"
                        android:singleLine="true"
                        android:text="昵称"
                        android:textColor="@color/Black"
                        android:id="@+id/nicheng"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>
                    <TextView
                        android:singleLine="true"
                        android:gravity="center_vertical"
                        android:id="@+id/uid"
                        android:text="id"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginBottom="20dp"
                android:background="@drawable/layout_clickbg"
                android:id="@+id/geren"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="10dp">
                    <ImageView
                        android:src="@drawable/mycenter_geren"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>
                <TextView
                    android:textColor="@color/Black"
                    android:gravity="center_vertical"
                    android:text="个人资料"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5" />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|end">
                    <ImageView
                        android:layout_margin="20dp"
                        android:src="@drawable/mycenter_arrawright"
                        android:layout_width="10dp"
                        android:layout_height="match_parent"
                        />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_marginBottom="1dp"
                android:background="@drawable/layout_clickbg"
                android:id="@+id/charity"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="10dp">
                    <ImageView
                        android:src="@drawable/charity_join"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>
                <TextView
                    android:textColor="@color/Black"
                    android:gravity="center_vertical"
                    android:text="我的公益"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5" />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|end">
                    <ImageView
                        android:layout_margin="20dp"
                        android:src="@drawable/mycenter_arrawright"
                        android:layout_width="10dp"
                        android:layout_height="match_parent"
                        />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginBottom="1dp"
                android:background="@drawable/layout_clickbg"
                android:id="@+id/order"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="10dp">
                    <ImageView
                        android:src="@drawable/mycenter_order"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>
                <TextView
                    android:textColor="@color/Black"
                    android:gravity="center_vertical"
                    android:text="我的订单"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5" />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|end">
                    <ImageView
                        android:layout_margin="20dp"
                        android:src="@drawable/mycenter_arrawright"
                        android:layout_width="10dp"
                        android:layout_height="match_parent"
                        />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:background="@drawable/layout_clickbg"
                android:layout_marginBottom="1dp"
                android:id="@+id/mygoods"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="10dp">
                    <ImageView
                        android:src="@drawable/mycenter_goods"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>
                <TextView
                    android:textColor="@color/Black"
                    android:gravity="center_vertical"
                    android:text="我的商品"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5" />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|end">
                    <ImageView
                        android:layout_margin="20dp"
                        android:src="@drawable/mycenter_arrawright"
                        android:layout_width="10dp"
                        android:layout_height="match_parent"
                        />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:background="@drawable/layout_clickbg"
                android:layout_marginBottom="20dp"
                android:id="@+id/xiaoxi"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="10dp">
                    <ImageView
                        android:src="@drawable/mycenter_message"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>
                <TextView
                    android:textColor="@color/Black"
                    android:gravity="center_vertical"
                    android:text="我的消息"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5" />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|end">
                    <ImageView
                        android:layout_margin="20dp"
                        android:src="@drawable/mycenter_arrawright"
                        android:layout_width="10dp"
                        android:layout_height="match_parent"
                        />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:background="@drawable/layout_clickbg"
                android:layout_marginBottom="20dp"
                android:id="@+id/setting"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="10dp">
                    <ImageView
                        android:src="@drawable/mycenter_setting"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>
                <TextView
                    android:textColor="@color/Black"
                    android:gravity="center_vertical"
                    android:text="设置"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5" />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|end">
                    <ImageView
                        android:layout_margin="20dp"
                        android:src="@drawable/mycenter_arrawright"
                        android:layout_width="10dp"
                        android:layout_height="match_parent"
                        />
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
</FrameLayout>
