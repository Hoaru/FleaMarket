<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.doyle.Fragment.F3Fragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:background="@color/hui"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="25dp"
            android:gravity="center_horizontal|center_vertical"
            android:textColor="@color/colorWhite"
            android:background="#FFC125"
            android:text="发布"/>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:id="@+id/pgoods"
            android:layout_marginBottom="20dp"
            android:background="@drawable/layout_clickbg"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="10dp">
                <ImageView
                    android:src="@drawable/publish_goods"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <TextView
                android:textColor="@color/Black"
                android:gravity="center_vertical"
                android:text="发布商品"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5" />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|end">
                <ImageView
                    android:layout_margin="20dp"
                    android:src="@drawable/mycenter_arrawright"
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/paimai"
            android:layout_marginBottom="20dp"
            android:background="@drawable/layout_clickbg"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="10dp">
                <ImageView
                    android:src="@drawable/publish_paimai"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <TextView
                android:textColor="@color/Black"
                android:gravity="center_vertical"
                android:text="发起拍卖"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5" />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|end">
                <ImageView
                    android:layout_margin="20dp"
                    android:src="@drawable/mycenter_arrawright"
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/song"
            android:layout_marginBottom="20dp"
            android:background="@drawable/layout_clickbg"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="10dp">
                <ImageView
                    android:src="@drawable/publish_free"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <TextView
                android:textColor="@color/Black"
                android:gravity="center_vertical"
                android:text="免费送"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5" />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|end">
                <ImageView
                    android:layout_margin="20dp"
                    android:src="@drawable/mycenter_arrawright"
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="20dp"
            android:id="@+id/gongyi"
            android:background="@drawable/layout_clickbg"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="10dp">
                <ImageView
                    android:src="@drawable/publish_gongyi"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <TextView
                android:textColor="@color/Black"
                android:gravity="center_vertical"
                android:text="发起公益"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5" />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|end">
                <ImageView
                    android:layout_margin="20dp"
                    android:src="@drawable/mycenter_arrawright"
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
