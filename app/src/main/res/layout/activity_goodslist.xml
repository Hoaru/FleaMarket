<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.doyle.activity.fleamarket.GoodslistActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="25dp"
        android:gravity="center_horizontal|center_vertical"
        android:textColor="@color/colorWhite"
        android:background="#FFC125"
        android:text="商品列表"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/moren"
            android:clickable="true"
            android:background="@drawable/layout_clickbg"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/moren_text"
                android:textColor="@color/Black"
                android:gravity="center_horizontal|center_vertical"
                android:text="默认"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/renqi"
            android:clickable="true"
            android:background="@drawable/layout_clickbg"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/renqi_text"
                android:textColor="@color/Black"
                android:gravity="center_horizontal|center_vertical"
                android:text="人气"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/shijian"
            android:clickable="true"
            android:background="@drawable/layout_clickbg"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/shijian_text"
                android:textColor="@color/Black"
                android:gravity="center_horizontal|center_vertical"
                android:text="时间"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/jiagedi"
            android:clickable="true"
            android:background="@drawable/layout_clickbg"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/jiagedi_text"
                android:textColor="@color/Black"
                android:gravity="center_horizontal|center_vertical"
                android:text="价格低"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/jiagegao"
            android:clickable="true"
            android:background="@drawable/layout_clickbg"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/jiagegao_text"
                android:textColor="@color/Black"
                android:gravity="center_horizontal|center_vertical"
                android:text="价格高"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

    </LinearLayout>
    <RelativeLayout
        android:background="@color/hui"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ListView
            android:background="@color/colorWhite"
            android:layout_marginTop="10dp"
            android:id="@+id/goodslist"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </ListView>
        <LinearLayout
            android:visibility="visible"
            android:gravity="center_vertical|center_horizontal"
            android:id="@+id/back"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:textSize="20dp"
                android:textColor="@color/Black"
                android:text="暂时没相关商品"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:src="@drawable/goods_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
</android.support.constraint.ConstraintLayout>
